<head>
	<link rel="stylesheet" href="/css/form.css">
</head>
<h2>Create Account</h2>
<form action="/users/register" method="post" class="form">
	<ul>
		<label>Name:</label>
		<li>
			<input type="text" class="field-style field-split" name="name" placeholder="name" required>
		</li>	
		<label>Username:</label>
		<li>
			<input type="text" class="field-style field-split" name="username" placeholder="username">
		</li>	
		<label>Email:</label>
		<li>
			<input type="email" class="field-style field-split" name="email" placeholder="email">
		</li>
		<label>Password:</label>
		<li>
			<input type="password" class="field-style field-split" name="password" placeholder="password">
		</li>
		<label>Confirm Password:</label>
		<li>
			<input type="password" class="field-style field-split" name="password2" placeholder="confirm password">
		</li>
		<li>
	    	<input type="submit" value="submit">
	    </li>	
	</ul> 
</form>