<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Login</title>
		<link rel="stylesheet" href="/css/style.css">
	</head>
	<body>
	 <header>
        <span id="logo">
            <H1>GreenLake Apartments</H1>
        </span>
        <span id="headerMenu">
            <a href="/">Home</a>
            <a href="/contact">Contact Us</a>
            <a href="/faq">FAQ</a>
        </span>
    </header>

	  <nav class="menu">
        <ul>
            {{#if user}}
            <li><a href="/">Dashboard</a></li>
            <li><a href="/users/register">Register</a></li>
            <li><a href="/users/logout">Logout</a></li>
            {{else}}
            <p><i>Address: 4500 North Green Lake, Chicago, IL 98115</i></p>
            <p>Phone: (206) 729-7600</p>
            {{/if}}
        </ul>
      </nav>
      <main class="main">
        {{#if success_msg}}
          <div>{{success_msg}}</div>
        {{/if}} 
        {{#if error_msg}}
          <div>{{error_msg}}</div>
        {{/if}}
        {{#if error}}
          <div>{{error}}</div>
        {{/if}}

      	{{{body}}}
      </main>
	</body>
  <footer class="footer">
    <p>&copy; GreenLake Apartments 2017</p>
  </footer>
</html>