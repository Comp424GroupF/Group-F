<p class="username">Hello {{username}}</p>
<head>
    <link rel="stylesheet" href="/css/form.css">
</head>
<h1 class="cheaders">Delete Request</h1>
    <form class="form" action="/requests/deleteRequest" method="post">
        <ul>
            <input type="hidden" name="aptno" class="field-style field-split" id="aptno" placeholder="aptno"/>
            <input type="hidden" name="servicetype" class="field-style field-split" id="servicetype" placeholder="servicetype"/>
            <textarea name="message" class="field-style" placeholder="details" id="message" rows="30" hidden></textarea>
            <input type="hidden" name="status" class="field-style field-split" id="status" placeholder="status"/>
           <li> 
            <input type="text" name="id" class="field-style field-split" id="id" placeholder="Id" readonly/>
           </li>
           <input type="hidden" name="date" class="field-style field-split" id="date" placeholder="date"/>
           <li>
              <input type="submit" value="Delete"/>
           </li>
        </ul>
    </form>
    <section class="content">
        <table class="table">
             <tr>
                <th></th>
                <th>Aptno</th>
                <th>Servicetype</th>
                <th>Message</th>
                <th>Status</th>
                <th>Date</th>
                <th>Id</th>
            </tr>
        {{# each requests }}
            <tr>
                <td><button class="get-req-data">Select</button></td>
                <td><div>{{ this.aptno }}</div></td>
                <td><div>{{ this.servicetype }}</div></td>
                <td><div>{{ this.message }}</div></td>
                <td><div>{{ this.status }}</div></td>
                <td><div>{{ this.date }}</div></td>
                <td><div>{{this.id}}</div></td>
            </tr> 
        {{/each}}
      </table>
    </section>

<a href="/requests/servicerequest">Back</a>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>