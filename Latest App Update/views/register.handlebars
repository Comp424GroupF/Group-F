<head>
	<link rel="stylesheet" href="/css/form.css">
</head>
<main>
	<h2>Create Account</h2>
		{{#if errors}}
		    {{#each errors}}
		    	<div class="err"><p>{{msg}}</p></div>
		    {{/each}}
		{{/if}}
	<form action="/users/register" method="post" class="form">
		<ul>
			Name:
			<li>
				<input type="text" class="field-style field-split" name="name" placeholder="name">
			</li>	
			Username:
			<li>
				<input type="text" class="field-style field-split" name="username" placeholder="username">
			</li>	
			Email:
			<li>
				<input type="email" class="field-style field-split" name="email" placeholder="email">
			</li>
			Password:
			<li>
				<input type="password" class="field-style field-split" name="password" placeholder="password">
			</li>
			Confirm Password:
			<li>
				<input type="password" class="field-style field-split" name="password2" placeholder="confirm password">
			</li>
			Aptno:
			<li>
				<input type="aptno" class="field-style field-split" name="aptno" placeholder="Aptno">
			</li>
			Apt type:
			<li>
				<input type="apttype" class="field-style field-split" name="apttype" placeholder="Apt type">
			</li>
			<li>
		    	<input type="submit" value="submit">
		    </li>	
		</ul> 
	</form>
</main>